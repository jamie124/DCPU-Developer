hwn i

:map_hardware
	sub i, 1
 

	hwq i

	ife b, 0x7349
		ife a, 0xF615
			set pc, set_monitor

	ifn i, 0
		set pc, map_hardware

:set_monitor
	set [MONITOR], i

:setup_monitor
	set a, 0
	set b, 0x8000
	hwi [MONITOR]


	set i, 0

:print_message
	set j, [MESSAGE + i]
	ife j, 0
		set pc, end

	bor j, 0xA000
	set [i + 0x8000], j
	add i, 1

	set pc, print_message

:MONITOR	
	dat 0x0000
:MESSAGE	
	dat "Hello, World!", 0
:end
	dat 0x0